// ==UserScript==
// @name         Hotkey Navigator
// @namespace    http://tampermonkey.net/
// @version      1.0
// @description  Hotkeys for instant navigation: Alt+Z (Base Camp), Alt+X (Study Guide/Start Lesson), Alt+C (Main Menu)
// @author       WOB
// @match        https://g.myascendmath.com/*
// @grant        none
// ==/UserScript==

(function() {
    'use strict';

    // Navigation Mapping
    const paths = {
        'z': 'https://g.myascendmath.com/Ascend/basecamp.htm',
        'x': 'https://g.myascendmath.com/Ascend/lessonPage.htm?page=studyGuide',
        'c': 'https://g.myascendmath.com/Ascend/student.do'
    };

    // Hotkey Listener
    window.addEventListener('keydown', (e) => {
        // Check if Alt is pressed
        if (e.altKey) {
            const key = e.key.toLowerCase();

            if (paths[key]) {
                e.preventDefault();
                console.log(`[Warp Drive] Navigating to: ${paths[key]}`);
                window.location.href = paths[key];
            }
        }
    });

    // Optional: Add a small indicator that the script is active
    console.log("ðŸš€ Warp Drive Active: Alt+Z (Base), Alt+X (Lesson), Alt+C (Menu)");
})();
